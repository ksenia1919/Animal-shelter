void __fastcall TForm5::Image2Click(TObject *Sender)
{
	Num_Animal = 0;
	Form3->Show();
	Form5->Hide();
}
//---------------------------------------------------------------------------
int counter_slide = 1;
int slide_filal = 0;
void __fastcall TForm5::FormShow(TObject *Sender)
{
	if(Num_Animal == 1) //Птица
	{
		Form4->ADOQuery2->Active = False;
		Form4->ADOQuery2->SQL->Clear();
		Form4->ADOQuery2->SQL->Text="SELECT * FROM Animals WHERE [Категория] = 'Птица'";
		Form4->ADOQuery2->Active = True;
	}
	else if (Num_Animal == 2) {   //Собака
		Form4->ADOQuery2->Active = False;
		Form4->ADOQuery2->SQL->Clear();
		Form4->ADOQuery2->SQL->Text="SELECT * FROM Animals WHERE [Категория] = 'Собака'";
		Form4->ADOQuery2->Active = True;
	}
	else if (Num_Animal == 3) {  //Кот
		Form4->ADOQuery2->Active = False;
		Form4->ADOQuery2->SQL->Clear();
		Form4->ADOQuery2->SQL->Text="SELECT * FROM Animals WHERE [Категория] = 'Кот'";
		Form4->ADOQuery2->Active = True;
	}
	else ShowMessage ("Ошибка сортировки");

//	ADOQuery1->SQL->Add("SELECT Фото FROM Animals WHERE Name = :name");
//	ADOQuery1->Parameters->ParamByName("name")->Value = "...";
//	ADOQuery1->Active=True;
//	Image2->Picture->LoadFromFile(ADOQuery1->FieldByName("Фото")->AsString);

	Image6->Picture->LoadFromFile(Form4->ADOQuery2->FieldByName("Фото")->AsString);
	Label2->Caption = Form4->ADOQuery2->FieldByName("Имя")->AsString;
	Label1->Caption = Form4->ADOQuery2->FieldByName("Возраст")->AsString;
    Label3->Caption = Form4->ADOQuery2->FieldByName("Информация")->AsString;
	//Счетчик-листалка карточек
	slide_filal = Form4->ADOQuery2->RecordCount;
	Label4->Caption = IntToStr(counter_slide) + "/" + IntToStr(slide_filal);
	///////////////////////


	if(Form4->ADOQuery2->FieldByName("Пол")->AsString == "Женский"){
		Image1->Picture->LoadFromFile("Figma_dounlad\\Animal_Card_girl.png");
	}
	else if (Form4->ADOQuery2->FieldByName("Пол")->AsString == "Мужской"){
		Image1->Picture->LoadFromFile("Figma_dounlad\\Animal_Card_boy.png");
	}
	else ShowMessage("Пол не найден");
}
//---------------------------------------------------------------------------

void __fastcall TForm5::Image3Click(TObject *Sender)
{
	Form4->ADOQuery2->Next();
	Image6->Picture->LoadFromFile(Form4->ADOQuery2->FieldByName("Фото")->AsString);
	Label2->Caption = Form4->ADOQuery2->FieldByName("Имя")->AsString;
	Label1->Caption = Form4->ADOQuery2->FieldByName("Возраст")->AsString;
	Label3->Caption = Form4->ADOQuery2->FieldByName("Информация")->AsString;
	if(counter_slide < slide_filal+1){
	Label4->Caption = IntToStr(counter_slide+1) + "/" + IntToStr(slide_filal);
	}
	else {ShowMessage("ERROR");}

	if(Form4->ADOQuery2->FieldByName("Пол")->AsString == "Женский"){
		Image1->Picture->LoadFromFile("Figma_dounlad\\Animal_Card_girl.png");
	}
	else if (Form4->ADOQuery2->FieldByName("Пол")->AsString == "Мужской"){
		Image1->Picture->LoadFromFile("Figma_dounlad\\Animal_Card_boy.png");
	}
	else ShowMessage("Пол не найден");
}
//---------------------------------------------------------------------------

void __fastcall TForm5::Image4Click(TObject *Sender)
{
    Form4->ADOQuery2->Prior();
	Image6->Picture->LoadFromFile(Form4->ADOQuery2->FieldByName("Фото")->AsString);
	Label2->Caption = Form4->ADOQuery2->FieldByName("Имя")->AsString;
	Label1->Caption = Form4->ADOQuery2->FieldByName("Возраст")->AsString;
	Label3->Caption = Form4->ADOQuery2->FieldByName("Информация")->AsString;
	if(counter_slide > 0){
	Label4->Caption = IntToStr(counter_slide-1) + "/" + IntToStr(slide_filal);
	}
	else {Label4->Caption = IntToStr(counter_slide) + "/" + IntToStr(slide_filal);}

	if(Form4->ADOQuery2->FieldByName("Пол")->AsString == "Женский"){
		Image1->Picture->LoadFromFile("Figma_dounlad\\Animal_Card_girl.png");
	}
	else if (Form4->ADOQuery2->FieldByName("Пол")->AsString == "Мужской"){
		Image1->Picture->LoadFromFile("Figma_dounlad\\Animal_Card_boy.png");
	}
	else ShowMessage("Пол не найден");
}
//---------------------------------------------------------------------------

void __fastcall TForm5::Image5Click(TObject *Sender)
{
    	Application->Title="Информация о местоположении";
		ShowMessage(Form4->ADOQuery2->FieldByName("Приют")->AsString);
}
